<div class="container login">
  <div class="row">
    <div class="col" id="extra"></div>
    <div class="col mt-5 content">
      <h1 class="text-center poppins purple">
        <a href="/" class="link-purple"><img
            src="./images/logo.jpg"
            width="60px"
            height="50px"
          />
          MedicationMe</a>
      </h1>
      <div class="card m-5 p-4">
        <div class="card-body">
          <h3 class="text-center mb-4">Welcome Back!</h3>
          <form class="login-form">
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input
                type="email"
                class="form-control form-control-sm"
                id="email"
                aria-describedby="emailHelp"
              />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control form-control-sm"
                id="password"
              />
            </div>
            <div class="mb-3 d-grid gap-2 col-6 mx-auto">
              <button type="submit" class="btn btn-sm peach">
                Log in to MedicationMe
              </button>
            </div>
          </form>
          <div class="mb-3 text-center font-12">
            <p>Don't have an account yet? <a href="/signup">Sign up now!</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body>

  <script src="/js/login.js"></script>